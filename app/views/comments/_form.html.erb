<div>
    <%= form_with(model:[@post, @comment], local:true) do |f| %>
    <% if @comment.errors.full_messages.each do |msg| %>
    <ul>
        <li> <%= msg %></li>
    </ul>
        <% end %>
    <% end %>

    <br>
    <h3>Comment</h3>
    <div>
        <%= f.text_area(:body, cols: 75, rows:5, placeholder: `What's on your mind?`) %>
    </div>
    <button class="btn btn-outline-primary" type="submit">Comment</button>
    <% end %>
</div>