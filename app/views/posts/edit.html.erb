<div class="padding">
    <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %> 
        <br>
        <div class="form-group">
            <%= f.label :title %>: <br>
            <%= f.text_area(:title, rows:2, cols:75) %>
        </div>
        <div class="form-group">
            <%= f.label :body %>: <br>
            <%= f.text_area(:body, rows:7, cols:75) %>
            
        </div>
        <br>
        <%= f.submit "Update Post", class: 'btn btn-outline-primary' %>
    <% end %>
</div>