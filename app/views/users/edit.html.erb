<div class="padding">
    <h1>Update User Information</h1>
    <%= form_with model:@user, local: true do |f| %>
    <% if @user.errors.any? %>
        <p><%= @user.errors.full_messages.join(', ')%></p>
    <% end %>
    <br>
    <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>
    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    <br>
    <%= link_to "Edit Password", edit_password_path(current_user) %>
    <br> <br>
    <%= f.submit "Submit", class: 'btn btn-outline-primary' %>

    <% end %>
</div>